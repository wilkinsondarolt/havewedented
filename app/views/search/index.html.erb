<main class="container">
  <%= simple_form_for(
      :search,
      method: :get,
      defaults: {
        input_html: { class: "input" },
        label_html: { class: "label" },
        required: false,
        wrapper_html: { class: 'field' }
      }
    )  do |f| %>
    <%= f.input :player, input_html: { autofocus: true } %>
    <%= f.input :opponent %>
    <%= f.submit "Search", class: "button is-primary"  %>
  <% end %>

  <%= turbo_frame_tag "game_list" do %>
    <%= render partial: 'search/game', collection: @games %>
  <% end %>
</main>
